<section class="content-header">
<h1>Kriteria<small> Edit</small></h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>        
    <li class="active">Kriteria</li>
  </ol>
</section>
<!-- Main content-->
<section class="content">
  <!-- Your Page Content Here-->
  <!-- /.row-->
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <!-- /.box-header-->
        <div class="box-body">
{{#each kriterias}}
            <form class="form-horizontal" action="/kriteria/edit/{{idKriteria}}?_method=PUT" method="POST">
              <div class="form-group">
                <label for="id" class="col-sm-3 control-label">Kode</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control" name="idKriteria" value="{{idKriteria}}">
                </div>
              </div>

              <div class="form-group">
                <label for="namaKriteria" class="col-sm-3 control-label">Nama Kriteria</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control" name="namaKriteria" value="{{namaKriteria}}">
                </div>
              </div>

              <div class="form-group">
                <label for="" class="col-sm-3 control-label">Atribut</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="atribut">
                    <option value="Benefit">Benefit</option>
                    <option value="Cost">Cost</option>                    
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="bobot" class="col-sm-3 control-label">Bobot</label>
                <div class="col-sm-7">
                  <input type="number" class="form-control" max="100" name="bobot" value="{{bobot}}">
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-10">
                  <input type="submit"  class="btn btn-primary pull-right" >
                </div>
              </div>

            </form>
{{/each}}            
        </div>
        <!-- /.box-body-->
      </div>
      <!-- /.box-->
    </div>
  </div>
</section>