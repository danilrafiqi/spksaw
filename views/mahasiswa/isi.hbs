<section class="content-header">
  <h1>Isi Data <small>Pengajuan Beasiswa</small></h1>
  
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>        
    <li class="active">Dashboard</li>
  </ol>
</section>
<!-- Main content-->
<section class="content">
  <!-- Your Page Content Here-->
  <!-- /.row-->
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <!-- /.box-header-->
        <div class="box-body">
            <form class="form-horizontal" action="/mahasiswa/daftar" method="POST">
              <div class="form-group">
                <label for="npm" class="col-sm-3 control-label">NPM</label>
                <div class="col-sm-7">
                  {{#with r_npm}}
                    <input type="text" class="form-control" name="npm" value="{{npm}}" >
                  {{/with}}
                </div>
              </div>
              <div class="form-group">
                <label for="prodi" class="col-sm-3 control-label">IPK</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="IPK">
                    {{#each r_ipk}}
                      <option value="{{nilai}}">{{keterangan}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="prodi" class="col-sm-3 control-label">Jumlah Piagam</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="Jumlah Piagam">
                    {{#each r_piagam}}
                      <option value="{{nilai}}">{{keterangan}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>


              <div class="form-group">
                <label for="prodi" class="col-sm-3 control-label">Penghasilan Orang Tua</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="Penghasilan Orang Tua">
                    {{#each r_penghasilan}}
                      <option value="{{nilai}}">{{keterangan}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="prodi" class="col-sm-3 control-label">Jabatan dalam Organisasi</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="Jabatan dalam Organisasi">
                    {{#each r_jabatan}}
                      <option value="{{nilai}}">{{keterangan}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="prodi" class="col-sm-3 control-label">Nilai Kedisiplinan</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="Nilai Kedisiplinan">
                    {{#each r_kedisiplinan}}
                      <option value="{{nilai}}">{{keterangan}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-10">
                  <input type="submit" name="" class="btn btn-primary pull-right" >
                </div>
              </div>
            </form>
        </div>
        <!-- /.box-body-->
      </div>
      <!-- /.box-->
    </div>
  </div>
</section>