<section class="content-header">
  <h1>Edit Data : <small>{{nama}}</small></h1>
  
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>        
    <li class="active">Dashboard</li>
  </ol>
</section>
<!-- Main content-->
<section class="content">
  <!-- Your Page Content Here-->
  <!-- /.row-->
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Edit Data Disini</h3>
        </div>
        <!-- /.box-header-->
        <div class="box-body">
            <form class="form-horizontal" action="/signup" method="POST">
                <div class="form-group">
                    <label for="npm" class="col-sm-3 control-label">NPM</label>
                    <div class="col-sm-7">
                      <input type="text" class="form-control" name="npm" >
                    </div>
                </div>

                <div class="form-group">
                    <label for="nama" class="col-sm-3 control-label">Nama</label>
                    <div class="col-sm-7">
                      <input type="text" class="form-control" name="nama" >
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="col-sm-3 control-label">Password</label>
                    <div class="col-sm-7">
                      <input type="password" class="form-control" name="password" >
                    </div>
                </div>

                <div class="form-group">
                    <label for="jenis_kelamin" class="col-sm-3 control-label">Jenis Kelamin</label>
                    <div class="col-sm-7">
                        <div class="radio">
                            <label><input type="radio" name="sex" value="L">Laki Laki</label>
                        </div>
                        <div class="radio">
                            <label><input type="radio" name="jenis_kelamin" value="P">Perempuan</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="no_hp" class="col-sm-3 control-label">No HP</label>
                    <div class="col-sm-7">
                      <input type="text" class="form-control" name="no_hp" >
                    </div>
                </div>

                <div class="form-group">
                    <label for="tanggal_lahir" class="col-sm-3 control-label">Tanggal Lahir</label>
                    <div class="col-sm-7">
                      <input type="date" class="form-control" name="tanggal_lahir" >
                    </div>
                </div>

                <div class="form-group">
                    <label for="semester" class="col-sm-3 control-label">Semester</label>
                    <div class="col-sm-7">
                        <label class="radio-inline"><input type="radio" name="semester" value="1">1</label>
                        <label class="radio-inline"><input type="radio" name="semester" value="2">2</label>
                        <label class="radio-inline"><input type="radio" name="semester" value="3">3</label>
                        <label class="radio-inline"><input type="radio" name="semester" value="4">4</label>
                        <label class="radio-inline"><input type="radio" name="semester" value="5">5</label>
                        <label class="radio-inline"><input type="radio" name="semester" value="6">6</label>
                        <label class="radio-inline"><input type="radio" name="semester" value="7">7</label>
                        <label class="radio-inline"><input type="radio" name="semester" value="8">8</label>
                    </div>
                </div>


              <div class="form-group">
                <label for="prodi" class="col-sm-3 control-label">Program Studi</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="prodi">
                    {{#each prodi}}
                      <option value="{{nama_prodi}}">{{nama_prodi}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-10">
                  <input type="submit" name="save" class="btn btn-primary pull-right" >
                </div>
              </div>
            </form>
        </div>
        <!-- /.box-body-->
      </div>
      <!-- /.box-->
    </div>
  </div>
</section>